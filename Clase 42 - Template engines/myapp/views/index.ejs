<!DOCTYPE html>
<html>
  <%-include('partials/head.ejs')%> 
  <body>
    <%-include('partials/header.ejs')%>

    <div class="container p-3">
      <h1>Nuestros productos</h1>
      <div class="container">
        <div class="row">

          <% products.forEach(product => { %>

            <div class="card col-md-4 col-lg-3">
              <img src="images/<%- product.image[0] %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%- product.name %> </h5>
                <h5 class="card-title text-success">$ <%- product.price %> </h5>
                <a href="/producto/<%-product.id%> " class="btn btn-primary">Detalles</a>
              </div>
            </div>

          <% }) %>

         
          

        </div>
      </div>
    </div>
    <%-include('partials/footer.ejs')%>
    
    
    
  </body>
</html>
